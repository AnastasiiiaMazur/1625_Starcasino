<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_marginTop="40dp"
        android:background="@drawable/screen_header"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back_button"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="HOME"/>

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_settings"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/screen_footer"
        android:layout_gravity="bottom"
        android:paddingVertical="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/newRouteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_new_route"
            android:background="@drawable/nav_button_back"/>

        <ImageView
            android:id="@+id/savedRoutesButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_saved_routes"
            android:background="@drawable/nav_button_back"/>

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_home"
            android:background="@drawable/basic_button"/>

        <ImageView
            android:id="@+id/statsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_stats"
            android:background="@drawable/nav_button_back"/>

        <ImageView
            android:id="@+id/manualRouteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_route_manually"
            android:background="@drawable/nav_button_back"/>

    </LinearLayout>

</FrameLayout>